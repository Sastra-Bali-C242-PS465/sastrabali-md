<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.dictionary.DictionaryFragment">

    <!-- NestedScrollView for Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title Section -->
            <TextView
                android:id="@+id/tv_title_dictionary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="@string/title_dictionary"
                android:textColor="@color/darkgreen"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="12dp"/>

            <!-- RecyclerView for Dictionary List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_dictionary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/card_dictionary" />

            <!-- TextView for No Data Message -->
            <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="medium"
                android:text="@string/no_data_available"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Spacer View -->
            <View
                android:layout_width="match_parent"
                android:layout_height="72dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
